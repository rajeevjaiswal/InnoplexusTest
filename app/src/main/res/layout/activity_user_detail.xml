<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ec"
    tools:context="com.rajeevjaiswal.innoplexustest.main.UserDetailActivity">

    <LinearLayout
        android:id="@+id/ll_sort_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_10"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:text="Name"
            android:textColor="@color/gray_66"
            android:textSize="16sp"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"/>

        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="14sp"
            android:textColor="@color/gray_99"
            android:layout_marginBottom="@dimen/margin_10"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:text="User Name"
            android:textColor="@color/gray_66"
            android:textSize="16sp"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="14sp"
            android:textColor="@color/gray_99"
            android:layout_marginBottom="@dimen/margin_10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:text="Email Address"
            android:textColor="@color/gray_66"
            android:textSize="16sp"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"/>

        <TextView
            android:id="@+id/tv_email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="14sp"
            android:textColor="@color/gray_99"
            android:layout_marginBottom="@dimen/margin_10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:text="Phone No"
            android:textColor="@color/gray_66"
            android:textSize="16sp"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"/>

        <TextView
            android:id="@+id/tv_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="14sp"
            android:textColor="@color/gray_99"
            android:layout_marginBottom="@dimen/margin_10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:text="Website"
            android:textColor="@color/gray_66"
            android:textSize="16sp"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"/>

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="14sp"
            android:textColor="@color/gray_99"
            android:layout_marginBottom="@dimen/margin_10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:text="Address"
            android:textColor="@color/gray_66"
            android:textSize="16sp"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"/>

        <TextView
            android:id="@+id/tv_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="14sp"
            android:textColor="@color/gray_99"
            android:layout_marginBottom="@dimen/margin_10"
            />

        <TextView
            android:id="@+id/tv_suite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="14sp"
            android:textColor="@color/gray_99"
            android:layout_marginBottom="@dimen/margin_10"
            />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="14sp"
            android:textColor="@color/gray_99"
            android:layout_marginBottom="@dimen/margin_10"
            />

        <TextView
            android:id="@+id/tv_zipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="14sp"
            android:textColor="@color/gray_99"
            android:layout_marginBottom="@dimen/margin_10"
            />

        <TextView
            android:id="@+id/tv_geo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="14sp"
            android:textColor="@color/gray_99"
            android:layout_marginBottom="@dimen/margin_10"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:text="Company Name"
            android:textColor="@color/gray_66"
            android:textSize="16sp"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"/>

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="14sp"
            android:textColor="@color/gray_99"
            android:layout_marginBottom="@dimen/margin_10"
            />

    </LinearLayout>

</ScrollView>
